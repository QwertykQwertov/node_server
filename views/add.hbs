<h1>Добавить курс</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1" required>
    <label for="price">Стоимость курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input id="url" name="url" type="text" class="validate" required>
    <label for="url">URL изображение</label>
    <span class="helper-text" data-error="Укажите url изображения"></span>
  </div>
  <button class="btn btn-primary" type="submit">Добавить курс</button>
</form>